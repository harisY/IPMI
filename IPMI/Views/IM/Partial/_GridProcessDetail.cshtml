@using IPMI.Models.IM
@{
    List<IMModels> Deatil = (List<IMModels>)ViewData["ListIMDetail"];
    var no = 0;
    var flag = 1;
}
<button class="btn btn-primary" id="btnAddDetail" onclick="return AddPopUp()"><span class="fa fa-plus"></span> Add Detail</button>
<table id="table_detail" class="table table-bordered table-striped _table" style="margin-top:10px">
    <thead>
        <tr>
            <th style="width:70px; text-align:center;" class="_form_submit">Action</th>
            <th>Department Tujuan</th>
        </tr>
    </thead>
    <tbody id="tbody_detail">
        @foreach (var item in Deatil)
        {
            no++;
            <tr>
                <td style="text-align:center;">
                    <input id="No" class="hidden _id" value="@no" />
                    <input id="Flag-@no" class="hidden" value="@flag" />
                    <input id="DetailID-@no" class="hidden _detailid" value="@item.NoIPMI" />
                    <input id="Dept-@no" class="hidden _dept" value="@item.Ke" />
                    <button class="btn btn-xs btn-success" title="Edit" onclick="return  EditPopUp($(this))"><span class="fa fa-pencil"></span></button>
                    <button class="btn btn-xs btn-danger" title="Delete" onclick="return DeleteDetail($(this))"><span class="fa fa-trash"></span></button>
                </td>
                <td id="ke-@no" class="_ke">@item.Ke</td>
            </tr>
        }
    </tbody>
</table>

