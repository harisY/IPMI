@using IPMI.Models.IM
@using IPMI.Models
@{
    List<IMModels> list = (List<IMModels>)ViewData["ListIM"];
    var i = 0;
    string dari = ViewBag.Dari;
}
<div class="row">
    <div class="col-xs-12">
        <div class="box box-primary">
            <div class="box-body">
                <button class="btn btn-primary" onclick="return AddForm()"><span class="fa fa-plus"></span> Create New</button>
                <hr />
                <table id="table" class="table table-bordered table-striped _table" style="width:100%">
                    <thead>
                        <tr>
                            <th style="width:10px; text-align:center;">No</th>
                            <th style="width:40px; text-align:center;">Action</th>
                            <th>No IPMI</th>
                            <th>Tanggal</th>
                            <th>Dari</th>
                            <th>Ke</th>
                            <th>Masalah</th>
                            <th>File</th>
                            <th>Jumlah</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody id="tbody">
                        @foreach (var item in list)
                        {
                            i++;
                            <tr>
                                <td class="_i">@i</td>
                                <td style="text-align:center;">
                                    <input class="hidden _id" value="@item.NoIPMI" />
                                    <input class="hidden _dept" value="@item.NamaDept" />
                                    @if (dari == item.Dari)
                                    {
                                        if (item.Status == "Open")
                                        {
                                            <button class="btn btn-xs btn-success" title="Edit" onclick="return  EditForm($(this))"><span class="fa fa-pencil"></span></button>
                                            <button class="btn btn-xs btn-danger" title="Delete" onclick="return DeletePopUp($(this))"><span class="fa fa-trash"></span></button>
                                            <button class="btn btn-xs btn-info" title="View" onclick="return ViewForm($(this))"><span class="fa fa-eye"></span></button>
                                        }
                                        else
                                        {
                                            <button class="btn btn-xs btn-info" title="View" onclick="return ViewForm($(this))"><span class="fa fa-eye"></span></button>

                                        }
                                    }
                                    else
                                    {
                                        <button class="btn btn-xs btn-info" title="View" onclick="return ViewForm($(this))"><span class="fa fa-eye"></span></button>
                                    }
                                </td>
                                <td class="_noipmi">@item.NoIPMI</td>
                                <td class="_tgl">@item.Tgl</td>
                                <td class="_dari">@item.Dari</td>
                                <td class="_ke">@item.Ke</td>
                                <td class="_masalah">@item.Masalah</td>
                                <td class="_file">@item.FileName</td>
                                <td class="_jumlah">@item.Jumlah</td>
                                <td class="_status">@item.Status</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

