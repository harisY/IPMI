    </div>
</div>
@section Scripts {
    <script>

        $(document).ready(function () {
            DataTable();
        })
        function DataTable() {
            $('#table').DataTable({
                "columnDefs": [
                    { "width": "15%", "targets": 1 },
                    { "width": "12%", "targets": 2 },
                    { "width": "10%", "targets": 3 }
                ],
                "paging": true,
                "lengthChange": true,
                "searching": true,
                "ordering": true,
                "info": true,
                "autoWidth": true
                //"scrollX": true
            });
        }

        function create() {
            $.ajax({
                type: "GET",
                url: '@Url.Action("Create", "Analisa")',
                data: {
                    Id: $("._id").val()
                }
            });
        }

        function Download() {
            //var FileName = data.closest("tr").find("._file").text();
            var FileName = "Catatan training.xlsx";
            $.ajax({
                type: "POST",
                url: '@Url.Action("Download", "Analisa")',
                data: {
                    FileName: FileName
                }
            });
        }
    </script>
}



