                <hr />
                <table id="table" class="table table-bordered table-striped _table" style="width:100%">
                    <thead>
                        <tr>
                            <th style="width:10px; text-align:left;">No</th>
                            <th text-align:left>Action</th>
                            <th>No IPMI</th>
                            <th>Tanggal</th>
                            <th>Dari</th>
                            <th>Masalah</th>
                            <th>File</th>
                            @*<th>Rencana Perbaikan</th>
