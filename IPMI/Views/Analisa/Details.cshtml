@using IPMI.Models.Analisa
@model AnalisaModels
@{
    ViewBag.Title = "Details";

    List<AnalisaModels> list = (List<AnalisaModels>)ViewData["ListAnalisaByNoIpmi"];
    var NoIPmi = "";
    var Penyebab = "";
    var Perbaikan = "";
    var Target = "";
    var PIC = "";
    var TglAktual = "";

    foreach (var item in list)
    {
        NoIPmi = item.NoIPMI;
        Penyebab = item.Penyebab;
        Perbaikan = item.RPerbaikan;
        Target = item.Target;
        PIC = item.PIC;
        TglAktual = item.TglActual;
    }
}

<div id="CreateForm">
    <div class="row">
        <div class="col-xs-12">
            <div class="box box-primary">
                <div class="box-body">
                    <h3 id="title_form"></h3>
                    <hr />
                    <div class="form-horizontal">
                        <div class="form-group">
                            <input id="form_id" class="hidden" />
                            <label class="col-md-1 control-label" style="text-align:left;">NO IPMI</label>
                            <label class="col-md-1 control-label">:</label>
                            <div class="col-md-5">
                                <input id="txtIpmi" class="form-control" disabled="disabled" value="@NoIPmi" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-1 control-label" style="text-align:left">Penyebab</label>
                            <label class="col-md-1 control-label">:</label>
                            <div class="col-md-5">
                                <textarea class="form-control" rows="2" id="txtPenyebab" style="resize:none" disabled="disabled">@Penyebab</textarea>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-1 control-label" style="text-align:left;">R. Perbaikan</label>
                            <label class="col-md-1 control-label">:</label>
                            <div class="col-md-5">
                                <input type="text" input id="txtPerbaikan" class="form-control" value="@Perbaikan" disabled="disabled" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-1 control-label" style="text-align:left">Target</label>
                            <label class="col-md-1 control-label">:</label>
                            <div class="col-md-5">
                                <input type="text" class="form-control" id="txtTarget" value="@Target" disabled="disabled">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-1 control-label" style="text-align:left">PIC</label>
                            <label class="col-md-1 control-label">:</label>
                            <div class="col-md-5">
                                <input type="text" class="form-control" id="txtPIC" value="@PIC" disabled="disabled">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-1 control-label" style="text-align:left">Tgl Aktual</label>
                            <label class="col-md-1 control-label">:</label>
                            <div class="col-md-5">
                                <input type="text" class="form-control" id="txtTgl" value="@TglAktual" disabled="disabled">
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-5">
                                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
